<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	
	<bean id="configBean" class="com.utility.ConfigBean" singleton="false">
      	<property name="DSN">
            <map>${DSN}</map>
        </property>	
		<property name="Domain">
            <map>${Domain}</map>
        </property>
      	<property name="Database">
            <map>${Database}</map>
        </property>
	</bean>	
	
	<!-- This bean can be a singleton based on a change in appSiteLoginProcess.cfm that sets the datasource 
	<cfset application.beanFactory.getBean("configBean").getDSN().client = "paclient_#trim(userValidated.ClientID)#" />
	 -->
	<bean id="globalFooter" class="com.utility.GlobalFooter" autowire="byType" />	
	
	<bean id="mySQLProcedures" class="com.utility.MySQLProcedures" autowire="byType" />	
	
</beans>